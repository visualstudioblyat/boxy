{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Boxy",
  "version": "0.1.0",
  "identifier": "com.bushido.boxy",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "createUpdaterArtifacts": true
  },
  "app": {
    "windows": [
      {
        "title": "Boxy",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; connect-src ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost localfile: http://localfile.localhost blob: data:; style-src 'self' 'unsafe-inline'; media-src 'self' asset: http://asset.localhost localfile: http://localfile.localhost; font-src 'self' data:"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/visualstudioblyat/boxy/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNENTM3NkQ2Q0ZGQkY5NEEKUldSSytmdlAxblpUUGJ0SW8xY2orZjlyS0RnTkJiWU9nemtlcU1CQ2NQMGM5REZtL2ZXcXRBQSsK"
    }
  }
}
